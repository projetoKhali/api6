{
  "name": "api",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "[[ -d $(poetry env info --path 2>/dev/null) ]] || poetry install && poetry run python apps/api/main.py"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["install"],
      "options": {
        "command": "poetry run python {projectRoot}/main.py"
      }
    },
    "add": {
      "executor": "nx:run-commands",
      "options": {
        "command": "poetry add {args.dep}"
      }
    }
  }
}
